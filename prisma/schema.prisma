generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(CITIZEN)

  uploads    Upload[]
  conflicts  Conflict[]
  @@map("users")
}

model House {
  id           String   @id @default(cuid())
  lastGarbage  DateTime
  wardNo       String
  address      String

  uploads   Upload[]
  conflicts Conflict[]

  @@map("houses")
}

model Upload {
  id         String   @id @default(cuid())
  collector  User     @relation(fields: [collectorId], references: [id])
  collectorId String
  house       House   @relation(fields: [houseId], references: [id])
  houseId     String
  timestamp   DateTime @default(now())

  @@map("uploads")
}

model Conflict {
  id          String   @id @default(cuid())
  collector   User     @relation(fields: [collectorId], references: [id])
  collectorId String
  house       House    @relation(fields: [houseId], references: [id])
  houseId     String
  image       String
  timestamp   DateTime @default(now())

  @@map("conflicts")
}

enum UserRole {
  COLLECTOR
  CITIZEN
  ADMIN
}
